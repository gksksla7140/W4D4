

<h1>Create Cat</h1>


<form class="" action='<%= cats_url %>' method="post">
  <%= auth_token %>

  <label for="cat_name">Cat Name:</label>
  <input type="text" name="cat[name]" id='cat_name'>
  <br>
  <br>
  <label for="cat-color">Color</label>
  <select  name="cat[color]">

    <% Cat::CAT_COLOR.each do |color| %>
    <option disabled></option>
    <option <%= @cat.color == color ? "selected" : "" %> value=" <%= color %>">
      <%= color %></option>

      <% end  %>
    </select>

    <input
    type="radio"
    name="cat[sex]"
    value="M"
    id="cat_sex_male"
    <%= @cat.sex == "M" ? "checked" : "" %>>
    <label for="cat_sex_male">Male</label>
    <input
    type="radio"
    name="cat[sex]"
    value="F"
    id="cat_sex_female"
    <%= @cat.sex == "F" ? "checked" : "" %>>
    <label for="cat_sex_female">Female</label>
    <br>
    <br>
    <label>
      Description
      <textarea name="cat[description]"><%= @cat.description %></textarea>
    </label>

    <br>
    <input type="submit" name="submit" value="CRETE CAT">




  </form>
